{
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/workers/*.ts",
    "src/messaging/worker-client.ts"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "lib": ["es2017", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true
  }
}
